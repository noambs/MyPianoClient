<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.noam.piano_stern.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:src="@drawable/stern_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Play List"/>

            <CheckBox
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/repeat_icon"
                />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/left_buttons">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_song1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="clearday"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>

                        <Button
                            android:id="@+id/btn_song2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hipjazz"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>

                        <Button
                            android:id="@+id/btn_song3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="retrosoul"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout">



                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_1"
                                android:clickable="true"
                                android:id="@+id/s1_btn"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="1"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_2"
                                android:clickable="true"
                                android:id="@+id/s2_btn"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="2"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_3"
                                android:clickable="true"
                                android:id="@+id/s3_btn"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="3"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_4"
                                android:clickable="true"
                                android:id="@+id/s4_btn"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:layout_marginBottom="5dp"
                                android:padding="0dp"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_5"
                                android:clickable="true"
                                android:id="@+id/s5_btn"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:layout_marginBottom="5dp"
                                android:padding="0dp"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_6"
                                android:clickable="true"
                                android:id="@+id/s6_btn"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:layout_marginBottom="5dp"
                                android:padding="0dp"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_key_style_7"
                                android:clickable="true"
                                android:id="@+id/s7_btn"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:layout_marginBottom="5dp"
                                android:padding="0dp"
                                android:layout_gravity="bottom"
                                android:textAlignment="center"/>
                        </FrameLayout>





                    </LinearLayout>


                    <com.noam.piano_stern.utils.BlackLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s9_btn"
                            android:tag="B"

                            />


                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s10_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s11_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s12_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s13_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s14_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s15_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s16_btn"
                            android:tag="B"

                            />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/black_key_style"
                            android:clickable="true"
                            android:id="@+id/s17_btn"
                            android:tag="B"

                            />




                    </com.noam.piano_stern.utils.BlackLayout>

                </FrameLayout>



                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:id="@+id/right_buttons">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_song4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="memories"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>

                        <Button
                            android:id="@+id/btn_song5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="allthat"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>

                        <Button
                            android:id="@+id/btn_song6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ssanova"
                            android:layout_margin="10dp"
                            android:theme="@style/AppTheme.Button"/>
                    </LinearLayout>
                </FrameLayout>



            </LinearLayout>
        </FrameLayout>



    </LinearLayout>


</RelativeLayout>





